source 'https://rubygems.org'

gem 'rails', '~> 8.0.3'
gem 'puma', '>= 6.5.0'

# Базы данных
gem 'pg'

# Обеспечение работы представлений и JavaScript
gem 'sprockets-rails'
gem 'slim-rails'

# Управление бизнес-логикой
gem 'dry-initializer'
gem 'dry-types'

# Конфигурирование приложения
gem 'config'
gem 'dotenv', require: 'dotenv/load'

<%- unless skip_active_admin? -%>
# Система администрирования
gem 'activeadmin'
gem 'activeadmin_addons'
gem 'devise'
<%- end -%>

# Интеграция с RabbitMQ
gem 'bunny'
gem 'kicks'

# Сериализация
gem 'alba'

# Загрузка файлов
gem 'carrierwave', '~> 3.1.2'
# Используем пропатченную версию до исправления следующего issue
# https://github.com/carrierwaveuploader/carrierwave-aws/issues/190
gem 'carrierwave-aws', git: 'https://github.com/igorsimdyanov/carrierwave-aws.git'
gem 'carrierwave-i18n'


group :development, :test do
  gem 'bundler-audit'
  gem 'capybara'
  gem 'database_consistency', require: false
  gem 'debug', platforms: %i[ mri windows ], require: 'debug/prelude'
  gem 'fasterer'
  gem 'factory_bot_rails'
  gem 'ffaker'
  gem 'rubocop-performance', require: false
  gem 'rubocop-rails', require: false
  gem 'rubocop-rspec', require: false
  gem 'rubocop-rails-omakase', require: false
  gem 'rspec-rails', '>= 7.1'
  gem 'simplecov', require: false
  gem 'shoulda-matchers'
  gem 'pry-rails'
  gem 'pry-byebug'
end

group :development do
  gem 'web-console'
end
